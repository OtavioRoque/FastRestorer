<Window x:Class="FastRestorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastRestorer"
        mc:Ignorable="d"
        Title="Fast Restorer" Height="300" Width="350" FontSize="14" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid IsEnabled="False" Opacity="0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid
                x:Name="dgBackups"
                Grid.Row="0"
                IsEnabled="False">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Database"
                        Width="2*"/>

                    <DataGridTextColumn
                        Header="Size MB"
                        Width="*"/>

                    <DataGridTextColumn
                        Header="Date"
                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button
                    x:Name="btnRestore"
                    Grid.Row="0"
                    Height="40"
                    Width="100"
                    Margin="0 10"
                    FontSize="14"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Content="Restore"/>

                <ProgressBar
                    x:Name="pbRestore"
                    Grid.Row="1"
                    Height="15"/>
            </Grid>
        </Grid>

        <Border
            BorderThickness="3"
            BorderBrush="#FF484747"
            CornerRadius="5"
            Margin="8">

            <Grid
                x:Name="gridDropArea"
                AllowDrop="True"
                Background="#4DEEEEEE"
                Drop="GridDropArea_Drop">

                <Button
                    x:Name="btnSelectFile"
                    Height="40"
                    Width="250"
                    FontWeight="Bold"
                    FontSize="16"
                    Foreground="#FF484747"
                    Content="Select or drop files here."
                    BorderThickness="0"
                    Background="Transparent"
                    Click="BtnSelectFile_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
